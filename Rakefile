# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/foliage.rb'

Hoe.spec 'foliage' do |p|
  p.version = Foliage::VERSION
  p.rubyforge_name = 'foliage'
  p.developer('Lars Christensen', 'larsch@belunktum.dk')
  p.extra_deps('ruby_parser' => '>=2.0.3', 'ruby2ruby' => '>=1.2.3')
end

